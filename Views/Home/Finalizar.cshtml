
@{
    ViewData["Title"] = "Finalizar";
}

<h1>Finalizar Pedido</h1>

<h4>Detalles del Cliente</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @ViewData["Nombre"]
        </dd>
        <dt class="col-sm-2">
            Dirección
        </dt>
        <dd class="col-sm-10">
            @ViewData["Dirección"]
        </dd>
        <dt class="col-sm-2">
            NIT
        </dt>
        <dd class="col-sm-10">
            @ViewData["NIT"]
        </dd>
    </dl>
</div>

<h4>Detalles del Pedido</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Cantidad
        </dt>
        <dd class="col-sm-10">
            @ViewData["Cantidad"]
        </dd>
        <dt class="col-sm-2">
            Total a pagar
        </dt>
        <dd class="col-sm-10">
            @ViewData["Total"]
        </dd>
    </dl>
</div>
<form asp-action="Confirmar">
    <div class="form-group">
        <input type="submit" value="Confirmar Pedido" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Order">Regresar</a>
</div>

